<UserControl x:Class="UMD.Canvas.Canvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMD.Canvas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer ManipulationDelta="UserControl_ManipulationDelta" IsManipulationEnabled="True"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <InkCanvas Name="Map" EditingMode="None" HorizontalAlignment="Left" VerticalAlignment="Top" Loaded="Map_Loaded"/>

    </ScrollViewer>
</UserControl>
